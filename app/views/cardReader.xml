<Alloy>
	<Window   navTintColor="#CE1D1C" id="win" title="eCard Reader"  navBarHidden="false">
		<View class="wfill hsize" top="0">
			<Label class="h5 wfill hsize themeColor padding" id="label_ida">QR Reader</Label>
	 	</View>
	 	<View class="wfill hsize box" top="0" zIndex="10">
			<Label class="wfill hsize padding h5" color="#000000" right="50" id="clinic_label"> 
			</Label>
			<ImageView image="/images/btn-down.png" id="openClinic" top="10" width="30" height="20" right="0"></ImageView>
		</View>
	 	<ImageView class="wfill hfill" image="/images/transparent-bg.png" zIndex="9" id="masked"></ImageView>
	 	<View zIndex="10" top="40" backgroundColor="#e1e2e2" class="wfill hsize vert" id="clinic">
			<Label class="padding wfill hsize" color="#cd1a19" textAlign="center">Select the panel</Label>
			<TableView backgroundColor="#e1e2e2" id="clinic_list" class="wfill hsize">
			</TableView>
		</View>
		<View zIndex="10" class="wfill hsize box" backgroundColor="#fff" id="login">
			<View class="wfill hsize padding vert">
				<Label id="login_clinic"></Label>
				<Label>Clinic Terminal Login</Label>
				<TextField class="wfill hsize padding" height="40" id="login_username" hintText="Username"></TextField>
				<TextField class="wfill hsize padding" height="40" passwordMask="true" id="login_password" hintText="Password"></TextField>
				<Button class="button" height="40" top="10" onClick="clinic_login" width="80%" title="Login"></Button>
			</View>
		</View>
		<ScrollView top="0" scrollType="vertical" zIndex="10" class="wfill hsize conthsize contwfill box" backgroundColor="#ffffff" id="inner_pay">
			<ScrollView class="wfill hsize padding vert conthsize contwfill" onScroll="closeKeyboard">
				<Label id="login_clinic"></Label>
				<Label>Claim Submission</Label>
				<TextField class="wfill hsize padding" editable="false" height="40" id="terminal_id" hintText="Terminal ID"></TextField>
				<TextField class="wfill hsize padding" editable="false" height="40" id="cardno" hintText="Card Number"></TextField>
				<TextField editable="false" onClick="openDiagPicker" class="wfill hsize padding" height="40" id="diag1" hintText="first diagnosis"></TextField>
				<TextField editable="false" onClick="openDiagPicker" class="wfill hsize padding" height="40" id="diag2" hintText="second diagnosis"></TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="mc" hintText="MC days">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="consday" hintText="consultation charges (day)">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="consnight" hintText="consultation charges (night)">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="medication" hintText="medication charges">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="injection" hintText="injection charges">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="xray" hintText="x-ray charges">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="surgical" hintText="surginal procedure charges">
					<KeyboardToolbar platform="ios">
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" right="10" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
				<!--<TextField class="wfill hsize padding" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD" height="40" id="total" hintText="total">
					<KeyboardToolbar>
               			<Toolbar>
                    		<Items>
                    			<Button onClick="hideKeyboard" onClick="hideKeyboard" systemButton="Ti.UI.iPhone.SystemButton.DONE" right="10" />
                			</Items>
            			</Toolbar>
            		</KeyboardToolbar>
				</TextField>
			-->
				<View class="wfill hsize"   width="100%">
					<Button class="button" height="40" top="10"  backgroundColor="#7B7B7B" onClick="cancel_submit" left="0" width="40%" title="Cancel"></Button>
					<Button class="button" height="40" top="10" onClick="claim_submit" right="0" width="40%" title="Submit"></Button>
				</View>
			</ScrollView>
		</ScrollView>
	    <View top="40" class="wfill hsize vert"> 
	    	<View class="horz wfill hsize" >
		    	<Button  id="scanner" class="button" height="80" top="10" left="1%" width="32%" title="Scan"></Button>
		    	<Button class="button" onClick="doInquiry" height="80" top="10" left="1%" width="32%" title="Inquiry"></Button>
		    	<Button class="button" onClick="doPay" height="80" top="10" left="1%" width="32%" title="Pay"></Button>
	    	</View>
	    	<View class="gray-line" top="15" bottom="5" />
	    	<Label text="Patient Information"  class="h4 wfill padding-left" bottom='5' /> 	
	    	<ScrollView class="vert hfill wfill" contentWidth="Ti.UI.FILL" backgroundColor="#ffffff" contentHeight="Ti.UI.SIZE">
	    		<View id="tvrName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill"  textAlign="right" >
						<Label text="Patient Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"  />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvruserIc"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Patient I/C" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblIc" text="" class="wfill padding padding-right h6 right-align" top="12"   color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvrEmp"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Emp. No." top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblEmp" text=""  class="wfill padding padding-right h6 right-align" top="12" color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				<View id="tvrCard"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Card. No." top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="cardnolbl" text=""  class="wfill padding padding-right h6 right-align" top="12" color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" />
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Corp. Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblCorpName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="vert hsize wfill "  >
						<Label text="Visit Remark" top="12" height="20" class="h5 wfill padding-left themeColor"  /> 
						<View class=" wfill right-align hsize" >
							<TextArea  horizontalWrap="true" id="remark" class="left-align h5 font_dark_grey" width="100%"   hintText="Please fill in visit remark" value=""  borderColor="#ffffff" backgroundColor="#ffffff"  height="100"  suppressReturn="false" >
								<KeyboardToolbar platform="ios">
									<Toolbar>
										<Items> 
											<FlexSpace/>
											<Button onClick="hideKeyboard" backgroundImage="/images/btn-down.png" textAlign="right" right="5" width="20" height="20"  />
										</Items>
									</Toolbar>
								</KeyboardToolbar>
							</TextArea>
						</View> 
					</View>
				</View> 
				<Button  id="saveBtn" class="button" title="Save" top="10" visible="false"></Button>
	    	</ScrollView>
	   	</View>
    </Window>
</Alloy>