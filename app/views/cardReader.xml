<Alloy>
	<Window   navTintColor="#CE1D1C" id="win" title="eCard Reader"  navBarHidden="false">
		<ActionBar platform="android" displayHomeAsUp="true" onHomeIconItemSelected="closeWindow" />
		 
		<View class="wfill hsize" top="0">
			<Label class="h5 wfill hsize themeColor padding" id="label_ida">Reader</Label>
	 	</View> 
	    <View  class="wfill hsize vert"> 
	    	<Button  id="scanner" class="button" title="Launch Scanner"></Button>
	    	<View class="gray-line" top="15" bottom="5" />
	    	<Label text="Patient Information"  class="h4 wfill padding-left" bottom='5' /> 	
	    	<ScrollView class="vert hfill wfill" contentWidth="Ti.UI.FILL" backgroundColor="#ffffff" contentHeight="Ti.UI.SIZE">
	    		<View id="tvrName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill"  textAlign="right" >
						<Label text="Patient Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"  />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				 <View id="tvruserIc"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Patient I/C" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblIc" text="" class="wfill padding padding-right h6 right-align" top="12"   color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvrEmp"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Emp. No." top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblEmp" text=""  class="wfill padding padding-right h6 right-align" top="12" color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Corp. Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblCorpName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Visit Remark" top="12" class="h5 wfill padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<TextArea  horizontalWrap="true" id="remark" class="left-align h5 font_dark_grey" width="100%"   hintText="Please fill in visit remark" value=""  borderColor="#ffffff" backgroundColor="#ffffff"  height="100"  suppressReturn="false" >
								<KeyboardToolbar platform="ios">
									<Toolbar>
										<Items> 
											<FlexSpace/>
											<Button onClick="hideKeyboard" backgroundImage="/images/btn-down.png" textAlign="right" right="5" width="20" height="20"  />
										</Items>
									</Toolbar>
								</KeyboardToolbar>
							</TextArea>
						</View> 
					</View>
				</View> 
				<Button  id="saveBtn" class="button" title="Save" top="10" visible="false"></Button> 
				
	    	</ScrollView>
	   	</View>
    </Window>
</Alloy>