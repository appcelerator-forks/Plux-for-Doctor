<Alloy>
	<Window   navTintColor="#CE1D1C" id="win" title="Patient Records"  navBarHidden="false">
		
		<View layout="vertical" id="loadingBar" height="120" width="120" borderRadius="15" backgroundColor="#2E2E2E" >
	        	<ActivityIndicator  id="activityIndicator" />
	        	<Label id="loading" top="5" text="Loading" color="#ffffff" />
	    </View>
		<View class="wfill hsize" top="0">
			<Label class="h4 wfill hsize  padding bold" id="label_ida">Patient Records</Label>
	 	</View> 
	 	 <ScrollView class="vert hfill wfill" contentWidth="Ti.UI.FILL" contentHeight="Ti.UI.SIZE" top="35">
	 	 	<View id="tvrVisitId"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill"  textAlign="right" >
						<Label text="Visit ID" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblVisitId" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"  />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
	    		<View id="tvrName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill"  textAlign="right" >
						<Label text="Patient Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"  />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				 <View id="tvruserIc"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Patient I/C" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblIc" text="" class="wfill padding padding-right h6 right-align" top="12"   color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvrEmp"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Emp. No." top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblEmp" text=""  class="wfill padding padding-right h6 right-align" top="12" color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Corp. Name" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblCorpName" text="" class="wfill padding padding-right h6 right-align" top="12"  color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				 <View id="tvrAllergy"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Allergy" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblAllergy" text="" class="wfill padding padding-right h6 right-align" top="12"   color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				
				 <View id="tvrVisitDate"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Visit Date" top="12" width="35%" class="h5 padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize" >
							<Label id="lblVisitDate" text="" class="wfill padding padding-right h6 right-align" top="12"   color="#000000"   />  
						</View> 
					</View>
				</View> 
				<View class="gray-line" /> 
				<View id="tvrVisitDate"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Receipt" top="12" width="35%" class="h5 padding-left themeColor"  />
					</View>
					<ImageView id="receipt_url" class="wfill hsize"></ImageView>
				</View> 
				<View class="gray-line" /> 
				<View id="tvrCorpName"  height="Ti.UI.SIZE" layout="vertical" selectedBackgroundColor="#ffffff" >
					<View class="horz hsize wfill "  textAlign="right" >
						<Label text="Visit Remark" top="12"  class="h5 wfill padding-left themeColor"  /> 
						<View width="auto"  class="right-align hsize padding" >
							<TextArea  horizontalWrap="true" id="remark" class="padding left-align h5 font_dark_grey wfill"   hintText="Please fill in visit remark" value="" top="0"  borderColor="#ffffff" backgroundColor="#ffffff"  height="150"  suppressReturn="false" >
								<KeyboardToolbar platform="ios">
									<Toolbar>
										<Items> 
											<FlexSpace/>
											<Button onClick="hideKeyboard" backgroundImage="/images/btn-down.png" textAlign="right" right="5" width="20" height="20"  />
										</Items>
									</Toolbar>
								</KeyboardToolbar>
							</TextArea>
						</View> 
					</View>
				</View> 
				<Button  id="saveBtn" class="button" title="Save" top="10"></Button> 
				
	    	</ScrollView>
	    <!--<ScrollView id="contentView" class="wfill hfill vert"  top="40"  contentHeight="Ti.UI.SIZE" contentWidth="Ti.UI.FILL" />  
    	-->
    </Window>
</Alloy>