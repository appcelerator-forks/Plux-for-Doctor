<Alloy>
	<View id="part" class="vert wfill hsize" bottom="10">
		<View class="wfill hsize" backgroundColor="#222835">
			<Label id="day" class="hsize wsize padding" color="#fff">MONDAY</Label>
			<Switch id="status" class="hsize wsize" right="10" onChange="changeDuty" title="Duty"></Switch>
		</View>
		<View id="extra" class="wfill hsize vert">
			<Label class="horz wfill hsize padding" bottom="0">Business Hours</Label>
			<View class="horz wfill hsize padding" top="0" horizontalWrap="false">
				<TextField id="time_start" class="hsize" width="35%" editable="false">00:00</TextField>
				<Label class="wsize hsize">to</Label>
				<TextField id="time_end" class="hsize" width="35%" editable="false">00:00</TextField>
			</View>
			<Label class="horz wfill hsize padding" top="0" bottom="0">Duration per patient (minute)</Label>
			<TextField id="duration" class="hsize" left="20" width="35%" keyboardType="Titanium.UI.KEYBOARD_TYPE_DECIMAL_PAD"></TextField>
		</View>
	</View>
</Alloy>